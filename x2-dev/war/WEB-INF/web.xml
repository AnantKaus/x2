<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	
	<servlet>
		<servlet-name>Login</servlet-name>
		<servlet-class>com.osahub.ecomm.controller.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>submitUserEnquiry</servlet-name>
		<servlet-class>com.osahub.ecomm.controller.DatastoreServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>submitUserEnquiry</servlet-name>
		<url-pattern>/submitUserEnquiry</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>Logout</servlet-name>
		<servlet-class>com.osahub.ecomm.controller.LogoutServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Logout</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>AddProductToCart</servlet-name>
		<servlet-class>com.osahub.ecomm.controller.AddProductToCartServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AddProductToCart</servlet-name>
		<url-pattern>/addToCart</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>AddProduct</servlet-name>
		<servlet-class>com.osahub.ecomm.controller.AddProductServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AddProduct</servlet-name>
		<url-pattern>/addProduct</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>serve</servlet-name>
		<servlet-class>com.osahub.ecomm.services.blob.ServeBlob</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>serve</servlet-name>
		<url-pattern>/serve</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>UpdateProduct</servlet-name>
		<servlet-class>com.osahub.ecomm.controller.UpdateProductServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UpdateProduct</servlet-name>
		<url-pattern>/updateProduct</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>searchById</servlet-name>
		<servlet-class>com.osahub.ecomm.controller.SearchProductByIdServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>searchById</servlet-name>
		<url-pattern>/searchById</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>subscribe</servlet-name>
		<servlet-class>com.osahub.ecomm.controller.SubscribeServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>subscribe</servlet-name>
		<url-pattern>/subscribe</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>showInterest</servlet-name>
		<servlet-class>com.osahub.ecomm.controller.ShowProductServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>showInterest</servlet-name>
		<url-pattern>/showInterest</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>SendEmail</servlet-name>
		<servlet-class>com.osahub.ecomm.controller.EmailHandlerServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SendEmail</servlet-name>
		<url-pattern>/sendEmail</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>ShowCart</servlet-name>
		<jsp-file>/kart.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>ShowCart</servlet-name>
		<url-pattern>/showCart</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>admin</servlet-name>
		<jsp-file>/admin.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>admin</servlet-name>
		<url-pattern>/admin</url-pattern>
	</servlet-mapping>
	
	<welcome-file-list>
		<welcome-file>index1.html</welcome-file>
	</welcome-file-list>
</web-app>
